<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jmodel_nav_header_height"
        android:background="@drawable/jmodel_side_nav_bar"
        android:paddingBottom="@dimen/jmodel_activity_vertical_margin"
        android:paddingLeft="@dimen/jmodel_activity_horizontal_margin"
        android:paddingRight="@dimen/jmodel_activity_horizontal_margin"
        android:paddingTop="@dimen/jmodel_activity_vertical_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:orientation="vertical"
        android:gravity="bottom">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/jmodel_nav_header_vertical_spacing"
            android:text="@string/jmodel_nav_header_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jmodel_nav_header_subtitle"
            android:id="@+id/textView"/>

</LinearLayout>
