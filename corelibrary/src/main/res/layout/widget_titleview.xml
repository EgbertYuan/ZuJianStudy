<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/titleview_ll"
              android:layout_width="match_parent"
              android:layout_height="@dimen/core_weight_woonton_title_height"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/titleview_body_ll"
        style="@style/core_weight_woonton_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/titleview_leftImg"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/titleview_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/core_title"
            android:textSize="@dimen/core_font_plus"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/titleview_rightImg"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/titleview_rightTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/core_title"
            android:textSize="@dimen/core_font_default"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>